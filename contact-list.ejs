<body>
  <nav id="navbar"></nav>

  <!DOCTYPE html>
  <html lang="en">

  <head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
  </head>

  <body>
    <center>
      <h3 class='my-4'>Orders List</h3>
    </center>



    <table width="100%" border="1px" style='text-align:center;'>
      <tr>
        <th>Id</th>
        <th>Name</th>
        <th>Phone Number</th>
        <th>Email</th>
        <th>Title</th>
        <th>Problem</th>
        <th>Options</th>
      </tr>

      <% for(let i=0 ; i < contact.length; i++){  %>

      <tr>
        <td><%- contact[i].Id %></td>
        <td><%- contact[i].name %></td>
        <td><%- contact[i].phonenumber %></td>
        <td><%- contact[i].email %></td>
        <td><%- contact[i].title %></td>
        <td><%- contact[i].problem %></td>
        <td>
          <a href="/delete-contact?id=<%- contact[i].Id %>">Delete</a>
        </td>
      </tr>



      <% } %>

    </table>
    <center>
      <a href="/">
        Add New Data
      </a>
    </center>
  </body>

  </html>

  <footer id="footer"></footer>
